<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/title_favorite"
            android:text="Favorites"
            android:layout_width="match_parent"
            android:textColor="@color/imdb_text"
            android:background="@color/imdb_background_text2"
            android:textAlignment="center"
            android:textSize="@dimen/size_title_home_movies"
            android:layout_height="38dp"
            app:layout_constraintTop_toBottomOf="@+id/title"/>

        <com.example.themoviedb.ui.widget.ImageInfoList
            android:id="@+id/favorite"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/title_wish"
            android:text="Wish List"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:textColor="@color/imdb_text"
            android:background="@color/imdb_background_text2"
            android:textAlignment="center"
            android:textSize="@dimen/size_title_home_movies"
            android:layout_height="38dp"
            app:layout_constraintTop_toBottomOf="@+id/title"/>

        <com.example.themoviedb.ui.widget.ImageInfoList
            android:id="@+id/wish"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
